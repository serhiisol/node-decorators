{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "paths": {
      "@server": [
        "./src/index.ts"
      ],
      "@server/express": [
        "./src/platforms/express/index.ts"
      ],
      "@server/fastify": [
        "./src/platforms/fastify/index.ts"
      ],
      "@server/http": [
        "./src/platforms/http/index.ts"
      ],
      "@server/swagger": [
        "./src/platforms/swagger/index.ts"
      ]
    },
    "pretty": true,
    "target": "ES2019",
    "types": [
      "@fastify/cookie",
      "@fastify/view",
      "@types/jest"
    ]
  },
  "include": [
    "./src"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
