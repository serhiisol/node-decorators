{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "rootDir": ".",
    "sourceMap": true,
    "target": "es6",
    "inlineSources": true
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "co/example/**/*",
    "mongoose/example/**/*",
    "express/example/**/*"
  ],
  "files": [
    "types/co.d.ts",
    "co/index.ts",

    "types/mongoose.d.ts",
    "mongoose/index.ts",

    "types/express.d.ts",
    "express/index.ts"
  ]
}
