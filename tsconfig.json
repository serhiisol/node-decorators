{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "rootDir": ".",
    "sourceMap": true,
    "target": "es6",
    "inlineSources": true,
    "typeRoots": ["node_modules/@types"],
    "pretty": true
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "types/**/*"
  ],
  "files": [
    "co/index.ts",
    "express/index.ts",
    "mongoose/index.ts",
    "socket/index.ts",
    "common/src/index.ts"
  ]
}
